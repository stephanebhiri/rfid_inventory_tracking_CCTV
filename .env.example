# Environment
NODE_ENV=development

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=actinvent

# CCTV Configuration
CCTV_BASE_URL=http://your-cctv-server:8090
CCTV_LOGIN=your_cctv_login
CCTV_PASSWORD=your_base64_encoded_password
CCTV_AUTH_TIMEOUT=10000
CCTV_REQUEST_TIMEOUT=30000

# Server Configuration (backend only)
SERVER_PORT=3002
SERVER_HOST=0.0.0.0
TZ=Europe/Paris

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# Performance Configuration
QUERY_CACHE_TTL=300000
MAX_CACHE_ENTRIES=100
DEFAULT_PAGE_SIZE=1000
MAX_PAGE_SIZE=1000

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000  
RATE_LIMIT_MAX=200
REQUEST_SIZE_LIMIT=10mb
ENABLE_HELMET=true